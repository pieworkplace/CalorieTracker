<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:id="@+id/diary_item_layout">
        <TextView
            android:id="@+id/diary_content_title"
            android:layout_toLeftOf="@id/diary_content_value"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Fried Chicken"
            android:singleLine="true"
            android:paddingLeft="@dimen/large_padding"
            android:paddingRight="@dimen/small_padding"
            android:paddingTop="@dimen/small_padding"
            android:ellipsize="end"/>
        <TextView
            android:id="@+id/diary_content_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            tools:text="200"
            android:paddingTop="@dimen/small_padding"
            android:paddingRight="@dimen/large_padding"
            android:layout_alignParentRight="true"/>
        <TextView
            android:layout_below="@id/diary_content_title"
            android:id="@+id/diary_content_amount"
            android:layout_height="wrap_content"
            tools:text="1 pound"
            android:paddingBottom="@dimen/small_padding"
            android:paddingLeft="@dimen/large_padding"
            android:layout_width="match_parent"
            android:ellipsize="end"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/hr_width"
            android:background="@color/colorBorderLine"
            android:layout_below="@id/diary_content_amount"/>

</RelativeLayout>
